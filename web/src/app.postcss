/* Write your global styles here, in PostCSS syntax */

@tailwind base;
@tailwind components;
@tailwind utilities;

h1 {
    @apply font-black uppercase text-3xl mx-auto;
}

h2 {
    @apply font-extrabold uppercase text-xl pt-4 pb-2;
}

h3 {
    @apply font-extrabold uppercase text-lg pt-2 pb-1;
}

p {
    @apply mb-4;
}

body {
    @apply bg-neutral-900 text-white p-12;
}

section {
    @apply mb-4;
}

svg {
        width: 100%;
        height: auto;
    }
